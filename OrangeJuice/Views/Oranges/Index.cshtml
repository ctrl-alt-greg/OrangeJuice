@model OrangeJuice.Models.FarmViewModel

@{
    ViewData["Title"] = "OrANgeez";
}

<h1>ORanGeEZ</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Oranges" asp-action="Index" method="get">
	<p>
		<select asp-for="SelectedFarm" asp-items="Model.Farms">
			<option value="">All</option>
		</select>

		Title: <input type="text" name="SearchString">
		<input type="submit" value="Search" />
	</p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Oranges[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Oranges[0].Farm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Oranges[0].HarvestDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Oranges[0].Weight)
            </th>
			<th>@Html.DisplayNameFor(model => model.Oranges[0].Juiciness)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Oranges) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Farm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HarvestDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
			<td>@Html.DisplayFor(modelItem => item.Juiciness)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
